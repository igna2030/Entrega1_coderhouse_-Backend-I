<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del Producto - {{product.title}}</title>
    <link rel="stylesheet" href="/CSS/Style.CSS">
</head>

<body>

    <div class="navbar">
        <a href="/" class=".btn-link-style">Inicio</a>
    </div>

    <h1>Detalle del Producto</h1>
    <hr>

    <div style="text-align: left; max-width: 800px; margin: 0 auto;">
        <a href="/products">&larr; Volver al Cat√°logo</a>
    </div>

    <div class="product-container">

        <h2>{{product.title}}</h2>

        <p><strong>Categor√≠a:</strong> {{product.category}}</p>

        <h3>Precio: ${{product.price}}</h3>

        <div>
            <h4>Descripci√≥n:</h4>
            <p>{{product.description}}</p>
        </div>

        <div>
            <p><strong>Stock Disponible:</strong> {{product.stock}} unidades</p>
            <p><strong>C√≥digo del Producto:</strong> {{product.code}}</p>
        </div>
        
        <div style="margin-top: 20px;">
            <form id="addToCartForm" data-product-id="{{product._id}}" style="display: flex; gap: 10px; align-items: center;">
                <div class="form-group">
                    <input type="text" name="cartId" placeholder="ID Carrito" required
                        title="Ingrese el ID del carrito para agregar el producto">
                </div>
                <button type="submit" class="btn-link-style" {{#unless product.stock}}>
                    {{#if product.stock}}
                        üõí A√±adir al Carrito
                    {{else}}
                        AGOTADO
                    {{/if}}
                </button>
            </form>
            <p id="message" style="margin-top: 10px; font-weight: bold;"></p>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('addToCartForm');
            const messageElement = document.getElementById('message');

            if (!form) return;

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const productId = form.getAttribute('data-product-id');
                const cartIdInput = form.querySelector('input[name="cartId"]');
                const cartId = cartIdInput.value.trim();

                if (!cartId) {
                    messageElement.textContent = '‚ùå Por favor, ingresa el ID del carrito.';
                    return;
                }

                const url = `/api/carts/${cartId}/products/${productId}`;
                
                try {
                    const response = await fetch(url, { method: 'POST' });
                    const data = await response.json();

                    if (response.ok && data.status === 'success') {
                        messageElement.textContent = '‚úÖ Producto agregado al carrito!';
                        messageElement.style.color = 'green';
                    } else {
                        messageElement.textContent = `‚ùå Error: ${data.message || 'Error desconocido.'}`;
                        messageElement.style.color = 'red';
                    }
                } catch (error) {
                    messageElement.textContent = '‚ùå Error de conexi√≥n con el servidor.';
                    messageElement.style.color = 'red';
                }
            });
        });
    </script>
</body>

</html>